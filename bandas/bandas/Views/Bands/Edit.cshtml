@model bandas.Models.Band

@{
    ViewData["Title"] = "Editar Banda";
}

<h2>Editar</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BandId" />
            <div class="form-group">
                <label asp-for="BandName" class="custom-control-label"> </label>
                <input asp-for="BandName" class="form-control" />
                <span asp-validation-for="BandName" class="text-danger"></span>
                <label asp-for="BandGender" class="custom-control-label"> </label>
                <input asp-for="BandGender" class="form-control" />
                <span asp-validation-for="BandGender" class="text-danger"></span>
                <label asp-for="BandMemberCant" class="custom-control-label"> </label>
                <input asp-for="BandMemberCant" class="form-control" />
                <span asp-validation-for="BandMemberCant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>


    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
