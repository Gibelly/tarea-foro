@model bandas.Models.Band

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>
<h3>¿Esta seguro de eliminar esta banda?</h3>

<div>
    <h4>Banda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BandName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BandName)
        </dd>
    </dl>
</div>

<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BandId" />
        <input type="submit" class="btn btn-danger" value="Borrar" />
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </form>



</div>