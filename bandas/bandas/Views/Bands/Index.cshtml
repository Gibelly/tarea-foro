@model IEnumerable<bandas.Models.Band>


@{

}

<h2>Lista de Bandas</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BandGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BandMemberCant)
            </th>
            <th></th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.BandName)</td>
            <td>@Html.DisplayFor(modelItem => item.BandGender)</td>
            <td>@Html.DisplayFor(modelItem => item.BandMemberCant)</td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.BandId">Editar</a>
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.BandId">Detalles</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BandId">Borrar</a>
            </td>
        </tr>
        }
    </tbody>
</table>